<%- include('./partials/head') %>
  <body>
    <div class="container">
      <div class="login">
        <div class="text_index">
          <h3 class="firstText_index">ENTRAR</h3>
          <h5 class="secondText_index">O seu passaporte para o futuro.</h5>
        </div>
        <form class="index_login" action="/users/authenticate" method="POST">
          <label for="input-email" class="label_email_index">E-mail</label>
          <input type="email" id="input-email" class="input_email_index" name="email" placeholder="Youraddress@email.com" required="required" autofocus="autofocus">
          <label for="input-password" class="label_password_index">Senha</label>
          <input type="password" id="input-password" class="input_password_index" name="password" placeholder="Enter your password" required="required" autofocus="autofocus">
          <% if (typeof notFound !== "undefined") { %>
            <div class="alert-danger">
              E-mail e/ou senha inválidos
            </div>
          <% } %>
          <button type="submit" id="buttonSubmit" name="submit">LOGIN</button>
        </form>
        <h4> Não possui uma conta? <a href="/users/register">Registrar-se</a></h4>
        <h4> Esqueceu sua senha? <a href="/users/forgotPassword">Esqueci a senha</a></h4>
      </div>
    </div>
  </body>
