<%- include('./partials/head') %>
  <body>
    <div class="container">
      <div class="register">
        <h1>CADASTRO</h1>
        <form class="register" action="/users/register" method="POST">
          <label for="input-email">E-mail</label>
          <input type="email" id="input-email" name="email" placeholder="Youraddress@email.com" required="required" autofocus="autofocus">
          <label for="input-password">Senha</label>
          <input type="password" id="input-password" name="password" required="required" autofocus="autofocus">
          <label for="confirm-password">Confirmar senha</label>
          <input type="password" id="confirm_password" name="confirm_password" required="required" autofocus="autofocus">
          <% if (typeof added !== "undefined") { %>
            <div class="alert-success">
              Usuário cadastrado com sucesso
            </div>
          <% } %>
          <a href="#"><button type="submit" id="buttonSubmit">CADASTRAR</button></a>
        </form>
        <h4> Já possui uma conta? <a href="/">Entrar</a></h4>
      </div>
    </div>
  </body>
